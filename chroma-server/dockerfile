FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1

# Install system deps + chromadb
RUN apt-get update && \
    apt-get install -y curl build-essential && \
    pip install --no-cache-dir chromadb

WORKDIR /app

EXPOSE 8000

# Start Chroma server using module syntax
CMD ["python", "-m", "chromadb", "run", "--host", "0.0.0.0", "--port", "8000"]
